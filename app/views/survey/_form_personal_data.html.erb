<%= form_for @personal_datum, :url => { :controller => :survey, :action => :create_person }, :html => { :class => "form-horizontal personal_datum" } do |f| %>

    <% if @personal_datum.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title">There were <%= pluralize(@personal_datum.errors.count, "error") %> errors in the form, please verify and correct them:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @personal_datum.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :sex, :class => 'control-label has-tooltip', 'data-placement' => 'right', 'title' => 'Are you a man or a woman?'  %>
    <div class="controls">
      <%= f.select :sex, @sex, {}, { :class => 'form-control' } %>
    </div>
    <%= error_span(@personal_datum[:sex]) %>
  </div>
  <div class="form-group">
    <%= f.label :age, :class => 'control-label has-tooltip', 'data-placement' => 'right', 'title' => 'How old are you?' %>
    <div class="controls input-group">
      <%= f.text_field :age, :class => 'form-control' %>
      <div class="input-group-addon">y.o.</div>
    </div>
    <%= error_span(@personal_datum[:age]) %>
  </div>
  <div class="form-group">
    <%= f.label :nationality, :class => 'control-label has-tooltip', 'data-placement' => 'right', 'title' => 'Where are you from?' %>
    <div class="controls">
      <%= f.select :nationality, @nationalities, {}, { :class => 'form-control' } %>
    </div>
    <%= error_span(@personal_datum[:nationality]) %>
  </div>
  <div class="form-group">
    <%= f.label "Country of residence", :class => 'control-label has-tooltip', 'data-placement' => 'right', 'title' => 'Where do you live currently?' %>
    <div class="controls">
      <%= f.select :living_country, @countries, {}, { :class => 'form-control' } %>
    </div>
    <%= error_span(@personal_datum[:living_country]) %>
  </div>
  <div class="form-group">
    <%= f.label :health_issues, :class => 'control-label has-tooltip', 'data-placement' => 'right', 'title' => 'Are you experiencing any health issues like: asthma, allergies, cancer etc.?' %>
    <div class="controls">
      <%= f.check_box :health_issues, {:class => 'form-control checkbox-control'},"true","false"  %>
    </div>
    <%= error_span(@personal_datum[:health_issues]) %>
  </div>
  <div class="form-group">
    <%= f.label :chronic_diseases, :class => 'control-label has-tooltip', 'data-placement' => 'right', 'title' => 'Are you fightning with any chronic disease?' %>
    <div class="controls">
      <%= f.check_box :chronic_diseases, {:class => 'form-control checkbox-control'},"true","false" %>
    </div>
    <%= error_span(@personal_datum[:chronic_diseases]) %>
  </div>
  <div class="form-group">
    <%= f.label :smoker, :class => 'control-label has-tooltip', 'data-placement' => 'right', 'title' => 'Are you smoking Tobacco?' %>
    <div class="controls">
      <%= f.check_box :smoker, {:class => 'form-control checkbox-control'},"true","false" %>
    </div>
    <%= error_span(@personal_datum[:smoker]) %>
  </div>
  <div class="form-group">
    <%= f.label :alcoholic, :class => 'control-label has-tooltip', 'data-placement' => 'right', 'title' => 'Do you have any self-control alcohol issues?' %>
    <div class="controls">
      <%= f.check_box :alcoholic, {:class => 'form-control checkbox-control'},"true","false"%>
    </div>
    <%= error_span(@personal_datum[:alcoholic]) %>
  </div>
  <div class="form-group">
    <%= f.label :druggy, :class => 'control-label has-tooltip', 'data-placement' => 'right', 'title' => 'Do you take drugs (weed, heroine, etc.)?' %>
    <div class="controls">
      <%= f.check_box :druggy, {:class => 'form-control checkbox-control'},"true","false" %>
    </div>
    <%= error_span(@personal_datum[:druggy]) %>
  </div>
  <div class="form-group">
    <%= f.label :disabled, :class => 'control-label has-tooltip', 'data-placement' => 'right', 'title' => 'Are you disabled?' %>
    <div class="controls">
      <%= f.check_box :disabled, {:class => 'form-control checkbox-control'},"true","false" %>
    </div>
    <%= error_span(@personal_datum[:disabled]) %>
  </div>


  <%= f.submit "Proceed (1/2)", :class => 'btn btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
            {:controller => :survey, :action => :index}, :class => 'btn btn-default' %>

<% end %>
