<%= form_for @personal_datum, :url => { :controller => :survey, :action => :create_person }, :html => { :class => "form-horizontal personal_datum" } do |f| %>

    <% if @personal_datum.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title">There were <%= pluralize(@personal_datum.errors.count, "error") %> errors in the form, please verify and correct them:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @personal_datum.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="control-group">
    <%= f.label :age, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :age, :class => 'form-control' %>
    </div>
    <%= error_span(@personal_datum[:age]) %>
  </div>
  <div class="control-group">
    <%= f.label :nationality, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :nationality, :class => 'form-control' %>
    </div>
    <%= error_span(@personal_datum[:nationality]) %>
  </div>
  <div class="control-group">
    <%= f.label :race, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :race, :class => 'form-control' %>
    </div>
    <%= error_span(@personal_datum[:race]) %>
  </div>
  <div class="control-group">
    <%= f.label :living_country, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :living_country, :class => 'form-control' %>
    </div>
    <%= error_span(@personal_datum[:living_country]) %>
  </div>
  <div class="control-group">
    <%= f.label :health_issues, :class => 'control-label' %>
    <div class="controls">
      <%= f.check_box :health_issues, :class => 'form-control' %>
    </div>
    <%= error_span(@personal_datum[:health_issues]) %>
  </div>
  <div class="control-group">
    <%= f.label :chronic_diseases, :class => 'control-label' %>
    <div class="controls">
      <%= f.check_box :chronic_diseases, :class => 'form-control' %>
    </div>
    <%= error_span(@personal_datum[:chronic_diseases]) %>
  </div>
  <div class="control-group">
    <%= f.label :smoker, :class => 'control-label' %>
    <div class="controls">
      <%= f.check_box :smoker, :class => 'form-control' %>
    </div>
    <%= error_span(@personal_datum[:smoker]) %>
  </div>
  <div class="control-group">
    <%= f.label :alcoholic, :class => 'control-label' %>
    <div class="controls">
      <%= f.check_box :alcoholic, :class => 'form-control' %>
    </div>
    <%= error_span(@personal_datum[:alcoholic]) %>
  </div>
  <div class="control-group">
    <%= f.label :druggy, :class => 'control-label' %>
    <div class="controls">
      <%= f.check_box :druggy, :class => 'form-control' %>
    </div>
    <%= error_span(@personal_datum[:druggy]) %>
  </div>
  <div class="control-group">
    <%= f.label :disabled, :class => 'control-label' %>
    <div class="controls">
      <%= f.check_box :disabled, :class => 'form-control' %>
    </div>
    <%= error_span(@personal_datum[:disabled]) %>
  </div>


  <%= f.submit nil, :class => 'btn btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
            {:controller => :survey, :action => :index}, :class => 'btn btn-default' %>

<% end %>
